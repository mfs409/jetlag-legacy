{
    "name": "jetlag",
    "version": "1.0.0",
    "description": "A 2D Game Framework for web and mobile, using PIXI.js and Box2D",
    "scripts": {
        "start-game": "node scripts/serve_game.mjs -w",
        "build-game": "node scripts/build_game.mjs",
        "clean-game": "cross-env MODE=DEV node scripts/clean_game.mjs",
        "start-tut": "node scripts/serve_tut.mjs -w",
        "clean-tut": "cross-env MODE=BUILD node scripts/clean_game.mjs",
        "build-tuts": "node scripts/build_tuts.mjs",
        "clean-tuts": "node scripts/clean_tuts.mjs",
        "serve-tuts": "http-server -c-1 tut-dist",
        "build-slides": "node scripts/build_slides.mjs",
        "clean-slides": "node scripts/clean_slides.mjs",
        "serve-slides": "http-server -c-1 slide-dist",
        "check": "tsc",
        "clean-check": "node scripts/clean_check.mjs",
        "clean-all": "node scripts/clean_all.mjs",
        "build-docs": "typedoc --cleanOutputDir src/jetlag/*.ts src/jetlag/*/*.ts",
        "start-docs": "http-server -c-1 docs/",
        "help": "node scripts/help.mjs"
    },
    "owner": "Michael Spear",
    "license": "MIT",
    "type": "module",
    "dependencies": {
        "@box2d/core": "^0.10.0",
        "hammerjs": "^2.0.8",
        "howler": "^2.2.4",
        "mermaid": "^9.3.0",
        "pixi-filters": "^5.2.1",
        "pixi.js": "^7.3.2",
        "showdown": "^1.9.1",
        "showdown-highlight": "^3.0.0",
        "showdown-katex": "^0.8.0",
        "vega-embed": "^6.20.8",
        "vega-lite": "^5.2.0"
    },
    "devDependencies": {
        "@types/hammerjs": "^2.0.44",
        "@types/howler": "^2.2.11",
        "@types/showdown": "^2.0.3",
        "chokidar": "^3.5.3",
        "cross-env": "^7.0.3",
        "esbuild-serve": "^1.0.1",
        "http-server": "^14.1.1",
        "typedoc": "^0.25.3",
        "typescript": "^5.1.6"
    }
}